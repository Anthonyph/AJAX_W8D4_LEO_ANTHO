  </thead>
  <tbody>
    <%@emails.each do |mail| %>
    <tr id=tr.<%=mail.id%>>
    
      <th scope="row"><%= mail.id%></th>
      <td id=object.<%=mail.id%>><%= mail.object%></td>
      <td><% mail.body%></td>
    <%end%>
    </tr>
   
  </tbody>
</table>
